.site-nav-toggle {
  display: none;
  position: absolute;
  top: 10px;
  left: 10px;
  +mobile() {
    display: block;
  }
  +tablet() {
    display: block;
  }

  button {
    margin-top: 2px;
    padding: 9px 10px;
    background: transparent;
    border: none;
  }
}

.site-nav {
  @media screen and (max-width: 991px) {
    display: none;
    margin: 0 -10px;
    padding: 0 10px;
    clear: both;
    border-top: 1px solid $gray-lighter;
  }
  +desktop() {
    display: block !important;
    position: fixed;
    left: 0;
    top: 0;
    width: 100%;
    height: 70px;
    z-index: 5000;
    background: rgba(255,255,255,0.6);
  }
  .site-overview-mobile {
    display: none;
    padding-top: 20px;
    p,span {
      color: #555;
    }
  }
  .nav-dimmer {
    display: none;
    font-size: 25px;
    color: $whitesmoke;
    @media screen and (max-height: 991px) {
      position: fixed;
      right: 0;
      top: 0;
      width: 40%;
      height: 100vh;
      background: rgba(0,0,0,0.3);
    }
    .nav-close {
      padding-left: 15px;
      cursor: pointer;
    }
  }
}
