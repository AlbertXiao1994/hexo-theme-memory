.posts-expand .post-tags {
  padding: 10px 0;
  margin-top: 15px;
  text-align: center;
  border-top: 1px dashed #ddd;
  border-bottom: 1px dashed #ddd;
  color: #999;

  a {
    display: inline-block;
    margin-right: 10px;
    font-size: 13px;
    border: none;
    color: #999;
    &:hover {
      color: $link-hover-color;
    }
  }
}
